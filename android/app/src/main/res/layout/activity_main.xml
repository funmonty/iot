<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="2dp"

                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/garagedoor_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Garage Door " />

                    <Switch
                        android:id="@+id/garage_door_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/garagedoor_label" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/garage_door_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/garage_door" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/garage_room_light"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/garagelight_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Garage Light" />

                    <Switch
                        android:id="@+id/garage_light_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/garagelight_label" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/garage_light_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/lamp_default" />


            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:id="@+id/Kitchen_card"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/kitchenMQ5_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kitchen MQ5" />

                    <!--<Switch-->
                    <!--android:id="@+id/kitchen_MQ5_switch"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@id/kitchenMQ5_label" />-->

                </RelativeLayout>

                <ImageView
                    android:id="@+id/kitchen_mq5_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/mq5_off" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/exhaustfan_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kitchen Exhaust" />

                    <Switch
                        android:id="@+id/kitchen_exhaust_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/exhaustfan_label" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/kitchen_exhaust_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/exh_def" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Hall_label"
                        android:text="Hall Light" />

                    <Switch
                        android:id="@+id/hall_light_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Hall_label" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/hall_light_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/lamp_default" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/Hall_card"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/HallMQ2_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hall MQ2" />

                    <!--<Switch-->
                    <!--android:id="@+id/hall_MQ2_switch"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@id/HallMQ2_label" />-->

                </RelativeLayout>

                <ImageView
                    android:id="@+id/hall_mq2_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/mq2" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Temperature_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Temperature_value"
                        android:layout_below="@id/Temperature_label"
                        android:textSize="24dp"
                        android:text="24"/>

                    <TextView
                        android:id="@+id/Humidity_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Temperature_value"
                        android:text="Humidity" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Humidity_label"
                        android:id="@+id/Humidity_value"
                        android:textSize="24dp"
                        android:text="24"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/temperature_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/temp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/security_card"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/SecuritySystem_label"
                        android:text="Security System" />

                    <Switch
                        android:id="@+id/securitysystem_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/SecuritySystem_label" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/securitysystem_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/security_check" />
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
